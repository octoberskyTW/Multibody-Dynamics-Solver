# flake8 configuration for Multibody Dynamics Solver
# Python 代碼檢查配置

[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific error codes
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (in __init__.py files)

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    build,
    build_cmake,
    _deps,
    .venv,
    venv,
    env,
    *.egg-info

# Files to include
filename = *.py

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    */conftest.py:F401

# Maximum complexity
max-complexity = 15

# Import order checking
import-order-style = google

# Docstring checking
docstring-convention = google

# Show source code for errors
show-source = True

# Show explanation for errors
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True